############## BAR ##################
sketchybar -m config height               23
sketchybar -m config position             top
sketchybar -m config padding_left         0
sketchybar -m config padding_right        15
sketchybar -m config bar_color            0xff424C5D

############## SCRIPT CACHING ############
sketchybar -m default cache_scripts on

############## SPACES ###############
sketchybar -m default icon_font "Hack Nerd Font:Bold:14.0"
sketchybar -m default icon_color 0xffffffff
sketchybar -m default label_font "Menlo:Bold:12.0"
sketchybar -m default label_color 0xffffffff
sketchybar -m default label_padding_left 4
sketchybar -m default icon_padding_left 16

sketchybar -m add component space one left
sketchybar -m set one associated_display 1
sketchybar -m set one associated_space 1
sketchybar -m set one icon 
sketchybar -m set one icon_highlight_color 0xff8CABC8
sketchybar -m set one label :1
sketchybar -m set one label_padding_right 0
sketchybar -m set one click_script "yabai -m space --focus 1"

sketchybar -m add component space two left
sketchybar -m set two associated_display 1
sketchybar -m set two associated_space 2
sketchybar -m set two icon_highlight_color 0xff8CABC8
sketchybar -m set two icon 
sketchybar -m set two label :2
sketchybar -m set two icon_padding_left 20
sketchybar -m set two click_script "yabai -m space --focus 2"

sketchybar -m add component space three left
sketchybar -m set three associated_display 1
sketchybar -m set three associated_space 3
sketchybar -m set three icon_highlight_color 0xff8CABC8
sketchybar -m set three icon  
